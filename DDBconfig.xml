<?xml version="1.0" encoding="utf-8"?>
<Config>
	<BaudRate value="9600"/>
	<BaudRate value="57600"/>
	<BaudRate value="115200"/>
	<!-- Список устройств с одинаковым айди -->
	<CommonIDDevices>
		<CIDD id="201">SF6015 v2</CIDD>
		<CIDD id="301">SF6030 v2</CIDD>
		<CIDD id="601">SF6040</CIDD>
		<CIDD id="401">SF6090 v1.1</CIDD>
		<CIDD id="101">SF6100 v2</CIDD>
		<CIDD id="501">SF6250</CIDD>
		<CIDD id="11">SF6015 v1</CIDD>
		<CIDD id="12">SF6030 v1</CIDD>
		<CIDD id="10">SF6100 v1</CIDD>
	</CommonIDDevices>


	<Device id="10" name="SF6100 v1" stopCommandDelayMs="300" minCommandDelayMs="10" maxCommandDelayMs="1000">
		<!-- ID - hex число, stopCommandDelay - десятичное -->
		<!-- Описание устройства -->
		<Content>
			<Image>SF6100-1.jpg</Image>
			<Description>Input Voltage Range (Vin): 12-55 Volts
Output Current Range (I): 0-20 Аmps
Output Voltage (0.73*Vin max) (V): 5-40 Volts
Minimum Current Set-Point Step Size: 0.1 Amps
Rise Time: less then 800μs
Fall Time: less then 200μs
Current Stability: less then 0.2%
Current Setpoint Absolute Accuracy: less then 1%</Description>
			<Link>https://www.maimanelectronics.com/archive</Link>
		</Content>
		<!-- команды доступные для устройства. Они циклично опрашиваются. Опрашиваются != используются :)) -->
		<Commands>
			<!-- Числа все Hex, кроме делителя - он десятичный. -->
			<Command code="0100" divider="10" unit="Hz"/>
			<Command code="0101" divider="10" interval="100" unit="Hz"/>
			<Command code="0102" divider="10" interval="100" unit="Hz"/>
			<Command code="0200" divider="10" unit="ms"/>
			<Command code="0201" divider="10" interval="100" unit="ms"/>
			<Command code="0202" divider="10" unit="ms"/>
			<Command code="0300" divider="10" unit="A"/>
			<Command code="0301" divider="10" interval="100" unit="A"/>
			<Command code="0302" divider="10" interval="100" unit="A"/>
			<Command code="0307" divider="10" unit="A"/>
			<Command code="0407" divider="10" unit="V"/>
			<Command code="0700"/>
			<Command code="0701" interval="100"/>
			<Command code="0800"/>
		</Commands>
		<!-- доступные для регулирования пределы -->
		<Limits>
		</Limits>
		<!--  калибровка -->
		<CalibrationKoefs>
		</CalibrationKoefs>
		<!-- Сделать бы так, чтобы при отсутствии параметра кнопка в меню не появлялась-->
		<!-- список выводимых параметров.
    регистр необходимо соблюдать
    (deg) - в проге заменяется на символ градуса
    Для температуры надо ставить флаг isTemperature="1", для остальных 0 или отсутствие флага
    параметры без value (установленный параметр) - выводятся в текстовом виде в окне параметров и только там.
    real - измеренный параметр
    Параметры с value "участвуют" в hide controls.
     -->
		<ParamControls>
			<Param min="0101" max="0102" value="0100">Frequency</Param>
			<Param min="0201" max="0202" value="0200">Duration</Param>
			<Param min="0301" max="0302" value="0300" real="0307">Current</Param>
			<Param real="0701">Serial Number</Param>
			<Param real="0407">Voltage</Param>
		</ParamControls>
		<!--  список checkbox (Галочек) Имеют code - номер команды два значения при нажатии и отщёлкивании галочки.
    Могут также программироваться по ID лично в проге, тогда остальные поля оставлять пустыми,
    хотя можно попробовтаь комбинировать, но насколько синхронно это будет работать есть сомнения -->
		<BinaryOptions>
			<CheckBox code="0700" onCommand="0020" offCommand="0040" mask="0004">Digital Current Set</CheckBox>
			<CheckBox code="0700" onCommand="0400" offCommand="0200" mask="0010">Digital Enable</CheckBox>
			<CheckBox code="0700" onCommand="2000" offCommand="1000" mask="0080">Ignore IntLock</CheckBox>
            <Button type="start" mask="0002" code="0700" onCommand="0008" offCommand="0010">Laser</Button>
		</BinaryOptions>
		<Leds>
			<Led label="Laser"  defaultColor="#171717">
				<LedMask code="0700" mask="0002" maskColor="#00ff00"/>
			</Led>
			<Led label="IntLock">
				<LedMask code="0800" mask="0002" maskColor="#ffff00">Interlock</LedMask>
			</Led>
			<Led label="Error">
				<LedMask code="0800" mask="0010" maskColor="#ffff00">Overheat warning</LedMask>
				<LedMask code="0800" mask="0008" maskColor="#ff0000">Over current or Overheat</LedMask>
			</Led>
		</Leds>
	</Device>

		<!--  калибровка -->
		<CalibrationKoefs>
			<Calibrate code="030E" min="95" max="105">Current calibration</Calibrate>
			<Calibrate code="0B0E" min="3000" max="5000">External NTC B25/100 coefficient</Calibrate>
		</CalibrationKoefs>
	
</Config>
